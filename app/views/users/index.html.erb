<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="text-center">PetTP Users</h1>
      <p class="text-center">Welcome to the PetTP community.  Users must fill out a profile in order to be visible in the community.</p>
      <h3 class="text-center">Find a User</h3>
      <%= form_tag users_path, :method => :get do |f| %>
        <%= text_field_tag :unamesearch, params[:unamesearch], placeholder: "Search Username", class: 'users-inline' %>
        <%= submit_tag "Search!", :name => nil, class: 'inline' %>
      <% end %>
      <br/>
      <ul class="list-unstyled">
        <% @users.each do |user| %>
          <% if user.profile && user.banned == false %>
            <li>
              <div class="well row <%= cycle('white-bg', '') %>">
                
                <div>
                  <div class="col-sm-10">
                    <%= link_to user do %>
                      <h2 class="inline"><%= user.username %></h2>
                    <% end %>
                  </div>
                  <div class="text-center">
                    <h4 class="inline fix-margin">Pets: <%= user.pets.count %></h4>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
      <h4><%= will_paginate @users, class: 'text-center' %></h4>
      </br>
    </div>
  </div>
</div>