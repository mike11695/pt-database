<!DOCTYPE html>
<html>
  <head>
    <title>Pet Trading Database</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Exo:400,400i,700|Orbitron|Electrolize" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', type: 'text/javascript'%>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-static-top" role="navigation">
      <div class='container'>
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_path, class: "navbar-brand" do %>
            <%= image_tag("alienaishahead.png", class: "navbar-image") %> Pet Trading Database</a>
          <% end %>
        </div>
        <div class="collapse navbar-collapse" id="main-nav-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if admin_signed_in? %>
              <li><%= link_to "Reports", "#" %></li>
              <li><%= link_to "Control Panel", "#" %></li>
              <li><%= link_to "Log Out", destroy_admin_session_path, method: :delete %></li>
            <% else %>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "Contact Us", new_contact_path %></li>
            <% if user_signed_in? %>
              <% if current_user.profile %>
              <li><%= link_to "View Profile", user_path(id: current_user.id) %></li>
              <li><%= link_to "Edit Profile", edit_user_profile_path(user_id: current_user.id) %></li>
              <% else %>
              <li><%= link_to "Create Profile", new_user_profile_path(user_id: current_user.id) %></li>
              <% end %>
              <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Log In", new_user_session_path %></li>
              <li class="link-divide">|</li>
              <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <% end %>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div>
    </nav>
    
    <div class="container">
      <% flash.each do |type, msg| %>
        <%= content_tag :div, msg, class: "alert alert-#{type}" %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>